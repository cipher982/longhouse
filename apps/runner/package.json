{
  "name": "@longhouse/runner",
  "version": "0.1.0",
  "description": "Longhouse runner daemon for executing commands on user infrastructure",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 --minify src/index.ts --outfile=dist/longhouse-runner-darwin-arm64",
    "build:darwin-x64": "bun build --compile --target=bun-darwin-x64 --minify src/index.ts --outfile=dist/longhouse-runner-darwin-x64",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 --minify src/index.ts --outfile=dist/longhouse-runner-linux-arm64",
    "build:linux-x64": "bun build --compile --target=bun-linux-x64 --minify src/index.ts --outfile=dist/longhouse-runner-linux-x64",
    "build:windows-x64": "bun build --compile --target=bun-windows-x64 --minify src/index.ts --outfile=dist/longhouse-runner-windows-x64.exe",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-arm64 && bun run build:linux-x64 && bun run build:windows-x64"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13"
  }
}
