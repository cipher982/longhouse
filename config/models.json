{
  "$comment": "Single source of truth for all LLM model configuration across Zerg and Oikos",

  "text": {
    "$comment": "Text/chat completion models (Zerg agent orchestration)",
    "tiers": {
      "TIER_1": "gpt-5.2",
      "TIER_2": "gpt-5-mini",
      "TIER_3": "gpt-5-nano"
    },
    "models": {
      "gpt-5.2": {
        "displayName": "GPT-5.2",
        "provider": "openai",
        "tier": "TIER_1",
        "description": "Latest state-of-the-art reasoning capability",
        "capabilities": {
          "reasoning": true,
          "reasoningNone": true
        }
      },
      "gpt-5-mini": {
        "displayName": "GPT-5 Mini",
        "provider": "openai",
        "tier": "TIER_2",
        "description": "Good quality, lower cost",
        "capabilities": {
          "reasoning": true,
          "reasoningNone": false
        }
      },
      "gpt-5-nano": {
        "displayName": "GPT-5 Nano",
        "provider": "openai",
        "tier": "TIER_3",
        "description": "Fast and cheap, basic capability",
        "capabilities": {
          "reasoning": true,
          "reasoningNone": false
        }
      },
      "meta-llama/llama-4-maverick-17b-128e-instruct": {
        "displayName": "Llama 4 Maverick (Groq)",
        "provider": "groq",
        "description": "Meta's Llama 4 Maverick via Groq LPU - blazing fast",
        "baseUrl": "https://api.groq.com/openai/v1",
        "capabilities": {
          "reasoning": false
        }
      },
      "qwen/qwen3-32b": {
        "displayName": "Qwen 3 32B (Groq)",
        "provider": "groq",
        "description": "Alibaba's Qwen 3 32B via Groq LPU - fast general purpose",
        "baseUrl": "https://api.groq.com/openai/v1",
        "capabilities": {
          "reasoning": true,
          "reasoningNone": true
        }
      },
      "glm-4.7": {
        "displayName": "GLM 4.7 (z.ai)",
        "provider": "anthropic",
        "description": "Zhipu GLM-4.7 via z.ai Anthropic-compatible API",
        "baseUrl": "https://api.z.ai/api/anthropic",
        "apiKeyEnvVar": "ZAI_API_KEY",
        "capabilities": {
          "reasoning": true
        }
      },
      "glm-4.7-flash": {
        "displayName": "GLM 4.7 Flash (z.ai Free)",
        "provider": "anthropic",
        "description": "Free-tier GLM-4.7 Flash - good enough for summarization",
        "baseUrl": "https://api.z.ai/api/anthropic",
        "apiKeyEnvVar": "ZAI_API_KEY",
        "capabilities": {
          "reasoning": false
        }
      }
    }
  },

  "realtime": {
    "$comment": "Realtime/voice models (Oikos voice interface)",
    "tiers": {
      "TIER_1": "gpt-4o-realtime-preview",
      "TIER_2": "gpt-4o-mini-realtime-preview"
    },
    "models": {
      "gpt-4o-realtime-preview": {
        "displayName": "GPT-4o Realtime",
        "provider": "openai",
        "tier": "TIER_1",
        "description": "Full capability realtime model"
      },
      "gpt-4o-mini-realtime-preview": {
        "displayName": "GPT-4o Mini Realtime",
        "provider": "openai",
        "tier": "TIER_2",
        "description": "Faster, cheaper realtime model"
      }
    },
    "aliases": {
      "gpt-realtime": "gpt-4o-realtime-preview",
      "gpt-4-realtime": "gpt-4o-realtime-preview"
    },
    "defaultVoice": "verse"
  },

  "useCases": {
    "$comment": "Maps use cases to tiers - quality-critical tasks get TIER_1 even for small outputs",
    "text": {
      "fiche_conversation": "TIER_1",
      "routing_decision": "TIER_1",
      "tool_selection": "TIER_1",
      "commis_task": "TIER_1",
      "summarization": "TIER_2",
      "summary_update": "TIER_3",
      "reflection": "TIER_2",
      "bulk_classification": "TIER_3",
      "ci_test": "TIER_3"
    },
    "realtime": {
      "voice_conversation": "TIER_1",
      "voice_test": "TIER_2"
    }
  },

  "routingProfiles": {
    "$comment": "Optional per-instance overrides. Select with MODELS_PROFILE (default: oss).",
    "oss": {
      "$comment": "Default OSS profile: no overrides"
    },
    "david": {
      "$comment": "David's instance: summarization on gpt-5-mini, incremental updates on z.ai (flat-rate)",
      "text": {
        "useCases": {
          "summarization": "gpt-5-mini",
          "summary_update": "glm-4.7-flash"
        }
      }
    }
  },

  "defaults": {
    "text": {
      "fiche": "TIER_1",
      "commis": "TIER_1",
      "test": "TIER_3"
    },
    "realtime": {
      "production": "TIER_1",
      "test": "TIER_2"
    }
  },

  "embedding": {
    "default": {
      "provider": "openai",
      "model": "text-embedding-3-small",
      "dims": 256,
      "apiKeyEnvVar": "OPENAI_API_KEY"
    }
  }
}
