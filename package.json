{
  "name": "@swarm/monorepo",
  "version": "1.0.0",
  "description": "Unified Swarm Platform: Jarvis (voice/text UI) + Zerg (agent orchestration backend)",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/jarvis/apps/*",
    "apps/jarvis/packages/*",
    "apps/jarvis/packages/data/*",
    "apps/zerg/frontend-web",
    "apps/zerg/e2e",
    "apps/runner",
    "packages/*"
  ],
  "scripts": {
    "dev": "make dev",
    "start": "make swarm-dev",
    "jarvis": "make jarvis-dev",
    "zerg": "make zerg-dev",
    "test": "make test",
    "generate-sdk": "make generate-sdk",
    "validate:css": "node scripts/validate-css-classes.js",
    "validate:all": "bun run validate:css && ./scripts/fast-contract-check.sh",
    "verify:react": "node scripts/verify-single-react.mjs"
  },
  "devDependencies": {
    "@asyncapi/cli": "^3.1.0",
    "@asyncapi/modelina": "^5.3.1",
    "asyncapi-rust-ws-template": "^0.3.2",
    "prettier": "3.7.4"
  },
  "overrides": {
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cipher982/zerg.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cipher982/zerg/issues"
  },
  "homepage": "https://github.com/cipher982/zerg#readme"
}
